<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerrorが発生しました
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
   </div>
  <div class="row">

    <div class="col-xs-3">
        <%= render 'books/userinfo', book: @book, user: @user %>
        <%= render 'books/side', book: @book, user: @user %>
    </div>
    <div class="col-xs-9">
        <%= render 'books/index', books: @books, user: @user %>
    </div>
  </div>
</div>