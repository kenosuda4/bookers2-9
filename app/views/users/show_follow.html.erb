<div class="container">
    <div class="row">
      <div class="col-xs-3">
         <%= render 'books/userinfo', user: @user %>
         <%= render 'books/side', book: @book %>　
         <%= render 'relationships/follow', book: @book, user: @user  %>
      </div>
      <div class="col-xs-9">
    <h2>Followings</h2>
    <p><%= @user.name %>がフォローしているユーザー</p>

      <table class="table table-striped">
           <thead>
		      <tr>
		        <th>image</th>
		        <th>name</th>
		        <th></th>
		        <th></th>
		      </tr>
           </thead>

           <% @user.followings.each do |user| %>
           <tbody>
            <tr>
              <td>
                 <div><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format:'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></div>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
              フォロー数<%= user.followings.count %>
              </td>
              <td>
              フォロワー数<%= user.followers.count %>
              </td>
              <td>
                <%= link_to "show",user_path(user.id), class: "user_#{user.id}" %>
              </td>
           
            </tr>
           </tbody>
    <% end %>
    </table>
   </div>
</div>